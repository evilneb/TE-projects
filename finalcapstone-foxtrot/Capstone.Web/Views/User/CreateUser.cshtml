@model Capstone.Web.Models.User

@{
    ViewBag.Title = "Create User";
}

<h2 class="move-head" id="CreateUserHead">Create User</h2>
<div class="container form-create-template">
    <hr class="form-line" />

    @using (Html.BeginForm("CreateUser", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @*<h4>User</h4>*@
        @*<hr />*@
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@

        <div class="form-group formInputGroup">
            @Html.Label("Username", "Username:")<br />
            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "textbox " } })<br />
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "error-message" })<br />
        </div>
        <div class="form-group formInputGroup">
            @Html.Label("Password", "Password:")<br />
            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "textbox" } })<br />
            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "error-message" })<br />
        </div>
            <div class="user-checkboxes form-group formInputGroup">
                    @*@Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        Administrator
                        @Html.CheckBoxFor(m => m.Administrator)
                        Researcher
                        @Html.CheckBoxFor(m => m.Researcher)
                        Technician
                        @Html.CheckBoxFor(m => m.Technician)
                        Partner User
                        @Html.CheckBoxFor(m => m.Partneruser)
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" value="Create User" class="form-btn-submit admin-btn-margin" />
                </div>
            </div>
    }
    <hr class="form-end-line" />
</div>